{
  "compilerOptions": {
    "rootDir": "./src",  /* Source principale du projet */
    "outDir": "./NicoLoanBuild", /* Dossier de sortie */
    "baseUrl": "src",
    "typeRoots": ["./src/@types", "./node_modules/@types"],
    "esModuleInterop": true,
    "sourceMap": true,
    "preserveConstEnums": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",  /* Inclure les fichiers sous src */
    "tsconfig.json"
  ],
  "exclude": [
    "node_modules"
  ]
}
